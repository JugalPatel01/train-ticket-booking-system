<div id="<%= dom_id ticket %>">
  <p>
    <strong>Train name:</strong>
    <% @t_t_object = Train.find(ticket.train_id)
    %>
    <%= @t_t_object.train_name %>
  </p>
  <p>
    <strong>starting place:</strong>
    <% @t_s_object = Schedule.find(ticket.schedule_id)
       @t_s_p_object = Place.find(@t_s_object.src_place_id)
       @t_d_p_object = Place.find(@t_s_object.dst_place_id)
    %>
    <%= @t_s_p_object.name %>
  </p>
  <p>
    <strong>destination place:</strong>
    <%= @t_d_p_object.name %>
  </p>
  <p>
    <strong>starting time:</strong>
    <%= @t_s_object.starting_time %>
  </p>
  <p>
    <strong>destination time:</strong>
    <%= @t_s_object.reaching_time %>
  </p>
  <p>
    <strong>tour fare for single person:</strong>
    <%= @t_s_object.tour_fare %>
  </p>
  <p>
    <strong>No of people:</strong>
    <%= ticket.no_of_people %>
  </p>

  <p>
    <strong>Total amount:</strong>
    <%= @t_s_object.tour_fare*ticket.no_of_people %>
  </p>

</div>
