<h1>Tickets</h1>

<%= link_to "New ticket", new_ticket_path %>
<div id="tickets">
  <% @tickets.each do |ticket| %>
    <% if current_user.id == ticket.user_id%>
      <%= render ticket %>
      <p>
        <%= link_to "Show this ticket", ticket %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to 'Back to Schedules', schedules_path, class:"btn btn-primary mb-2 mt-2" %>
